<local:GameViewBase x:Class="CrappyNerdGame.Views.StartMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CrappyNerdGame.Views"
             xmlns:enums="clr-namespace:CrappyNerdGame.Enums"
             mc:Ignorable="d"
             Width="800" 
             Height="460"
             Background="Black"
             FontSize="50"
             FontFamily="{StaticResource PixelHigh}">
    <local:GameViewBase.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="50 10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="1.0"/>
                                <Setter Property="FontSize" Value="51"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </local:GameViewBase.Resources>
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Name="PlayerSprite" Source="/Assets/Images/Nerd.png" Width="280" Height="280">
                <Image.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform X="100" Y="20"/>
                    </TransformGroup>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect
                        x:Name="PlayerDropShadowEffect"
                        Color="White"
                        BlurRadius="20"
                        ShadowDepth="0"
                        Opacity="0.3" />
                </Image.Effect>
            </Image>
            <StackPanel>
                <Button Content="Start Game" Click="RequestViewButtonClick" Style="{StaticResource MenuButtonStyle}"
                        Tag="{x:Static enums:ViewType.GamePlay}" />
                <Button Content="Credits" Click="RequestViewButtonClick" Style="{StaticResource MenuButtonStyle}"
                        Tag="{x:Static enums:ViewType.Credits}" />
                <Button Content="Quit" Click="QuitButtonClick" Style="{StaticResource MenuButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</local:GameViewBase>
