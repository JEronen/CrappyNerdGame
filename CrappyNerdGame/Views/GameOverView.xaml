<local:GameViewBase x:Class="CrappyNerdGame.Views.GameOverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CrappyNerdGame.Views"
             xmlns:views="clr-namespace:CrappyNerdGame.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" 
             d:DesignWidth="300" 
             Background="Transparent"
             FontFamily="{StaticResource ThaleahFat}"
             Focusable="True">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Width" Value="180" />
                <Setter Property="Height" Value="40" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="Foreground" Value="FloralWhite" />
                <Setter Property="Background" Value="#372e36" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Border Background="LightGray"
                CornerRadius="10"
                Padding="20"
                Width="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="Black"
                BorderThickness="2">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBlock Text="Game Over"
                           FontSize="42"
                           Foreground="#372e36"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 20">
                </TextBlock>

                <TextBlock x:Name="ScoreTextBlock"
                           Text="Final Score: 0"
                           FontSize="32"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 20"/>
                
                <Button x:Name="RestartButton"
                        Content="Restart"
                        Click="RestartButton_OnClick"
                        Margin="0 0 0 10"/>
                <Button x:Name="MainMenuButton"
                        Content="Main Menu"
                        Click="MainMenuButton_OnClick"/>
            </StackPanel>

        </Border>
    </Grid>
</local:GameViewBase>
