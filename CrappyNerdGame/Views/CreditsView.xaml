<local:GameViewBase x:Class="CrappyNerdGame.Views.CreditsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CrappyNerdGame.Views"
             Loaded="CreditsView_OnLoaded"
             Unloaded="CreditsView_OnUnloaded"
             mc:Ignorable="d"
             Focusable="True"
             Width="800"
             Height="600">
    <Grid Background="Black">
        <Grid.Resources>
            <Storyboard x:Key="ScrollCredits" FillBehavior="Stop">
                <DoubleAnimation
                    Storyboard.TargetName="CreditsTransform"
                    Storyboard.TargetProperty="Y"
                    From="600"
                    To="-800"
                    Duration="0:0:30"/>
            </Storyboard>

            <Style x:Key="CreditsSectionHeader" TargetType="TextBlock">
                <Setter Property="Foreground" Value="Gray"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,0,0,4"/>
            </Style>
            
            <Style x:Key="CreditsItem" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>
            
            <Style x:Key="CreditsName" TargetType="TextBlock" BasedOn="{StaticResource CreditsItem}">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="Margin" Value="0,0,0,18"/>
            </Style>
            
            <Style x:Key="CreditsLicense" TargetType="TextBlock">
                <Setter Property="Foreground" Value="Gray"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
            </Style>
            
            <Style x:Key="CreditsTitle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="36"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontFamily" Value="{StaticResource ThaleahFat}"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,0,0,40"/>
            </Style>
        </Grid.Resources>

        <StackPanel HorizontalAlignment="Center" Focusable="False" x:Name="CreditsPanel" >
            <StackPanel.RenderTransform>
                <TranslateTransform x:Name="CreditsTransform" />
            </StackPanel.RenderTransform>

            <TextBlock Text="Crappy Nerd"
                       Style="{StaticResource CreditsTitle}"/>

            <TextBlock Text="Programming, Art and Design"
                       Style="{StaticResource CreditsSectionHeader}"/>
            <TextBlock Text="Jani Eronen"
                       Style="{StaticResource CreditsName}"/>

            <TextBlock Text="Music"
                       Style="{StaticResource CreditsSectionHeader}"/>

            <TextBlock Text="&quot;Echoes at Dusk Loop 1&quot;"
                       Style="{StaticResource CreditsItem}"
                       Margin="0,0,0,6"/>
            <TextBlock Text="&quot;Tempest Loop 1&quot;"
                       Style="{StaticResource CreditsItem}"
                       Margin="0,0,0,12"/>

            <TextBlock Text="Composed by Crow Shade"
                       Style="{StaticResource CreditsName}"/>

            <TextBlock Text="Licensed under Creative Commons Attribution 4.0 (CC BY 4.0)"
                       Style="{StaticResource CreditsLicense}"/>

            <TextBlock Text="Fonts"
                       Style="{StaticResource CreditsSectionHeader}"/>

            <TextBlock Text="&quot;PixelHigh&quot;"
                       Style="{StaticResource CreditsItem}"
                       Margin="0,0,0,6"/>
            <TextBlock Text="Created by Lana Ro"
                       Style="{StaticResource CreditsName}"/>

            <TextBlock Text="Licensed under Creative Commons Attribution 4.0 (CC BY 4.0)"
                       Style="{StaticResource CreditsLicense}"/>

            <TextBlock Text="&quot;ThaleahFat&quot;"
                       Style="{StaticResource CreditsItem}"
                       Margin="0,0,0,6"/>
            <TextBlock Text="Created by Rick Hoppmann"
                       Style="{StaticResource CreditsName}"/>

            <TextBlock Text="Licensed under Creative Commons Attribution 4.0 (CC BY 4.0)"
                       Style="{StaticResource CreditsLicense}"/>
        </StackPanel>
    </Grid>

</local:GameViewBase>
