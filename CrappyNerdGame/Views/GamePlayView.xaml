<local:GameViewBase x:Class="CrappyNerdGame.Views.GamePlayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CrappyNerdGame.Views"
             xmlns:enums="clr-namespace:CrappyNerdGame.Enums"
             mc:Ignorable="d"
             Width="800" 
             Height="460">
    <Canvas Name="GameCanvas" 
            MouseLeftButtonDown="GameCanvas_OnMouseLeftButtonDown" 
            MouseLeftButtonUp="GameCanvas_OnMouseLeftButtonUp"
            Focusable="True" 
            Background="Black">
        <Image Width="190" Height="150" Source="/Assets/Images/Cloud1.png" Opacity="0.5" Canvas.Left="28" Canvas.Top="120" Tag="{x:Static enums:ObjectType.SkyElement}"/>
        <Image Width="190" Height="150" Source="/Assets/Images/Cloud2.png" Opacity="0.3" Canvas.Left="307" Canvas.Top="120" Tag="{x:Static enums:ObjectType.SkyElement}"/>
        <Image Width="70" Height="70" Source="/Assets/Images/Moon.png" Opacity="0.4" Canvas.Left="600" Canvas.Top="120" Tag="{x:Static enums:ObjectType.SkyElement}">
            <Image.Effect>
                <DropShadowEffect
                    Color="White"
                    BlurRadius="20"
                    ShadowDepth="0"
                    Opacity="1" />
            </Image.Effect>
        </Image>
        <Image x:Name="PipeUpTemplate"
               Width="65"
               Height="400"
               Source="/Assets/Images/PipeUp.png"
               Tag="{x:Static enums:ObjectType.PipeTop}"
               Visibility="Collapsed"/>

        <Image x:Name="PipeDownTemplate"
               Width="65"
               Height="400"
               Source="/Assets/Images/PipeDown.png"
               Tag="{x:Static enums:ObjectType.PipeBottom}"
               Visibility="Collapsed"/>
     
        <Image x:Name="PlayerSprite" 
               Width="50" 
               Height="50"  
               Source="/Assets/Images/Nerd.png" 
               Canvas.Top="190" 
               Canvas.Left="20" 
               Canvas.ZIndex="1"
               Tag="{x:Static enums:ObjectType.Player}"
               Stretch="Fill">
            <Image.Effect>
                <DropShadowEffect
                        Color="White"
                        BlurRadius="20"
                        ShadowDepth="0"
                        Opacity="1" />
            </Image.Effect>
        </Image>
        <Label x:Name="ScoreLabel"
               Canvas.Left="5"
               Canvas.ZIndex="2"
               Foreground="White"
               FontFamily="{StaticResource ThaleahFat}"
               FontSize="30" 
               Content="Score : 0" />
    </Canvas>
</local:GameViewBase>
